{
  "manifest_version": 3,
  "name": "HiAnime Ad Blocker",
  "version": "1.0.0",
  "description": "Ad blocker extension with specific domain exclusions.",
  "permissions": [
    "declarativeNetRequest",
    "tabs",
    "alarms",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
