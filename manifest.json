{
  "manifest_version": 3,
  "name": "HiAnime Ad Blocker",
  "version": "0.9.0",
  "description": "Blocks and closes unwanted tabs and redirects from hianime.to.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
